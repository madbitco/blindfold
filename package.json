{
  "name": "blindfold",
  "version": "0.2.0",
  "description": "Disable retweets from people you follow, all at once.",
  "main": "app/index.js",
  "scripts": {
    "dev": "node app/index.js && yarn watch:css && yarn watch:js",
    "prebuild": "rimraf public/css/ && rimraf public/js/",
    "build": "yarn build:css && yarn build:js",
    "build:css": "parcel build styles/global.css --out-dir public/css",
    "build:js": "parcel build src/main.js --out-dir public/js",
    "watch:css": "parcel watch styles/global.css --out-dir public/css",
    "watch:js": "parcel watch src/main.js --out-dir public/js"
  },
  "author": "Matthew Morek (matthewmorek@me.com)",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@bugsnag/js": "^6.5.2",
    "@bugsnag/plugin-express": "^6.5.1",
    "apicache": "^1.5.3",
    "autoprefixer": "^9.7.6",
    "body-parser": "^1.19.0",
    "cookie-session": "^2.0.0-beta.3",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "envify": "^4.1.0",
    "express": "^4.17.1",
    "express-sanitizer": "^1.0.5",
    "helmet": "^3.22.0",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.1",
    "parcel-bundler": "^1.12.4",
    "passport": "^0.4.1",
    "passport-twitter": "^1.0.4",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "precss": "^4.0.0",
    "promise-limit": "^2.7.0",
    "reset-css": "^5.0.1",
    "rimraf": "^3.0.2",
    "twitter": "^1.7.1",
    "vue": "^2.6.11",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "nodemon": "^2.0.2"
  }
}
